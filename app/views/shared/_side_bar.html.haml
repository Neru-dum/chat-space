.side
  .side__Top
    .side__icon
      = current_user.name
      = link_to new_group_path do
        = icon('fas', 'edit',  class: "side__btn__icon0")
      = link_to edit_user_path(current_user), class: "side__btn" do
        = icon('fas', 'cog',  class: "side__btn__icon1")
  .side__ber
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message